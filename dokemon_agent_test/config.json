{
  "name": "Dokémon Agent",
  "version": "latest",
  "slug": "dokemon_agent",
  "description": "Connects to a Dokémon server",
  "url": "https://github.com/dokemon-ng/",
  "arch": ["amd64", "armv7", "aarch64"],
  "image": "javastraat/dokemon-agent",
  "startup": "application",
  "boot": "auto",
  "init": false,
  "ports": {},
  "volumes": {
    "docker_sock": "/var/run/docker.sock"
  },
  "options": {
    "server_url": "http://192.168.2.203:9090",
    "token": "your-token-here"
  },
  "schema": {
    "server_url": {
      "name": "Dokémon Server URL",
      "description": "Full URL of your Dokémon server (include http:// and port)",
      "type": "string",
      "required": true
    },
    "token": {
      "name": "Authentication Token",
      "description": "Secret token for API access",
      "type": "string",
      "required": true
    }
  },
  "environment": {
    "SERVER_URL": "{{ server_url }}",
    "TOKEN": "{{ token }}"
  }
}
