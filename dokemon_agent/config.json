{
  "name": "Dokémon Agent",
  "version": "latest",
  "slug": "dokemon_agent",
  "description": "Connects to a Dokémon server",
  "url": "https://github.com/dokemon-ng/homeassistant-addons",
  "arch": ["amd64", "armv7", "aarch64"],
  "image": "javastraat/dokemon-agent",
  "startup": "application",
  "boot": "auto",
  "init": false,
  "ports": {},
  "volumes": {
    "docker_sock": "/var/run/docker.sock"
  },
  "options": {
    "server_url": "http://your-server-ip:9090",
    "token": "your-token-here"
  },
  "schema": {
    "server_url": {
      "name": "Server URL",
      "description": "URL of Dokemon server",
      "required": true,
      "type": "string"
    },
    "token": {
      "name": "Access Token",
      "description": "Authentication token",
      "required": true,
      "type": "string"
    }
  },
  "host_network": true,
}
